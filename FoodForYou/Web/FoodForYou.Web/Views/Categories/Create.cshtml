@model FoodForYou.Web.ViewModels.Categories.CreateCategoryInputModel
@{
    ViewData["Title"] = "Add Category";
}

<h1 class="text-center  m-3">Create new Category</h1>

<form method="post" enctype="multipart/form-data" asp-controller="Categories" asp-action="Create">
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">


            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.Name" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.Name" class="form-control" type="text" placeholder="Name..." />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>




            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.ImageUrl" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.ImageUrl" class="form-control-file" type="file" placeholder="Image..." />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <hr class="mt-3 hr-2" />

            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Add Category</button>
            </div>
        </div>

        
    </div>

</form>