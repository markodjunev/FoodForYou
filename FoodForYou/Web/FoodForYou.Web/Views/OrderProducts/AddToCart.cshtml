@model FoodForYou.Web.ViewModels.OrderProducts.CreateOrderProductInputModel
@{
    this.ViewData["Title"] = "Add to Cart";
}

<h1 class="text-center">
    Add @this.ViewBag.ProductName to the cart
</h1>

<hr class="my-4" />

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-5">
        <form method="post">
            <img src="@this.ViewBag.ProductImageUrl" class="card-img-top" alt="..."/>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.Quantity" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.Quantity" class="form-control" type="number" placeholder="Quantity..." />
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Add To Card</button>
            </div>
        </form>       
    </div>
</div>