@model FoodForYou.Web.ViewModels.OrderProducts.AllProductsInCartViewModel
@{
    ViewData["Title"] = "Products in the cart";
    var count = 1;
}

@if (@Model.OrderedProducts.Count() == 0)
{
    <h1>Empty Cart!</h1>
}
else
{
<h1>Current products in the cart</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderedProduct in Model.OrderedProducts)
    {
        <tr>
            <th scope="row">@count</th>
            <td>@orderedProduct.ProductName</td>
            <td>@orderedProduct.Quantity</td>
            <td>@orderedProduct.Price€</td>
            <td>@orderedProduct.Status</td>
        </tr>
        count++;
    }
    </tbody>
    <tfoot>
        <tr>
            <th scope="col">#</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">Total Sum: @Model.Sum€</th>
            <th scope="col"></th>
        </tr>
    </tfoot>
</table>

<hr class="my-4" />

<div class="d-flex justify-content-between">
    <a asp-controller="OrderProducts" asp-action="Clear" asp-route-id="" class="btn btn-danger">Clear Cart</a>
    <a asp-controller="Order" asp-action="CompleteOrder" asp-route-id="" class="btn btn-primary">Complete Order</a>
</div>
}

