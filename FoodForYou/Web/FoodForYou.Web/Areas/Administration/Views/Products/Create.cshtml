@model FoodForYou.Web.ViewModels.Products.CreateProductInputModel
@{
    ViewData["Title"] = "Add product";
    var categoryName = this.ViewBag.CategoryName;
}
<h1 class="text-center">Create new product in @categoryName</h1>

<hr class="my-4">

<div class="row">

    <div class="col-md-3">

    </div>
    <div class="col-md-6">

        <form class="w-30 mx-auto" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.Name" class="font-weight-bold"></label>
                    </div>
                    <input asp-for="@Model.Name" class="form-control" type="text" placeholder="Name..." />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.Price" class="font-weight-bold"></label>
                    </div>
                    <input asp-for="@Model.Price" class="form-control" type="number" placeholder="Price..." />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.Description" class="font-weight-bold"></label>
                </div>
                <textarea asp-for="@Model.Description" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.ImageUrl" class="font-weight-bold">Please upload a photo with size 512x342</label>
                </div>
                <input asp-for="@Model.ImageUrl" class="form-control-file" type="file" placeholder="Image..." />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            
            <hr class="mt-3 hr-2" />

            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Add Product</button>
            </div>
        </form>
    </div>
</div>
